@page "/"
@using System.Globalization
@inject IDataService _dataService;

<PageTitle>Finanční mentor</PageTitle>

<h1>FINANČNÍ MENTOR&nbsp;💸</h1>
<p>
    Blazor - WebAssembly: <a href="https://www.youtube.com/watch?v=89Klc6WHElw&list=PLwISgxnkpZGL_LhTQCWwp-WCzupv7lcp0&index=3" target="_blank">Claudio Bernasconi</a> <br />
</p>
<br />
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <strong>@currentYear</strong> - Příjmy a výdaje
            </div>
            <div class="card-body">
                <RadzenChart>
                    <RadzenColumnSeries Fill="#AACDBE" Data="@yearlyVydelky" CategoryProperty="Month" ValueProperty="Castka" Title="Příjmy" LineType="LineType.Dashed" />
                    <RadzenColumnSeries Fill="#EA907A" Data="@yearlyVydaje" CategoryProperty="Month" ValueProperty="Castka" Title="Výdaje" LineType="LineType.Dashed" />
                    <RadzenColumnOptions Radius="5" />
                    <RadzenValueAxis Formatter="@FormatAsCZK">
                        <RadzenGridLines Visible="true" />
                        <RadzenAxisTitle Text="Částka v korunách" />
                    </RadzenValueAxis>
                </RadzenChart>
            </div>
        </div>
    </div>
</div>

@if (vydelky != null)
{
    <div class="row mt-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    Příjmy - poslední 3 měsíce
                </div>
                <div class="card-body">
                    <div style="display: flex">
                        <PieChart Colors="@colors" Data="@vydelky.CurrentMonth" />
                        <PieChart Colors="@colors" Data="@vydelky.LastMonth" />
                        <PieChart Colors="@colors" Data="@vydelky.PreviousMonth" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (vydaje != null)
{
    <div class="row mt-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    Výdaje - poslední 3 měsíce
                </div>
                <div class="card-body">
                    <div style="display: flex">
                        <PieChart Colors="@colors" Data="@vydaje.CurrentMonth" />
                        <PieChart Colors="@colors" Data="@vydaje.LastMonth" />
                        <PieChart Colors="@colors" Data="@vydaje.PreviousMonth" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private static int currentYear = DateTime.Today.Year;
    private ICollection<string> colors = new List<string>() { "#FBC687", "#F4F7C5", "#93ABD3" };
    private ICollection<YearlyItem> yearlyVydaje;
    private ICollection<YearlyItem> yearlyVydelky;
    private ThreeMonthsData vydelky;
    private ThreeMonthsData vydaje;

    protected override async Task OnInitializedAsync()
    {
        vydelky = await _dataService.LoadLast3MonthsVydelky();
        vydaje = await _dataService.LoadLast3MonthsVydaje();
        yearlyVydaje = await _dataService.LoadCurrentYearVydaje();
        yearlyVydelky = await _dataService.LoadCurrentYearVydelky();

        StateHasChanged();
    }

    string FormatAsCZK(object value)
    {
        return ((double)value).ToString("C", CultureInfo.CreateSpecificCulture("cs-CZ"));
    }
}


